---
import PlusIcon from '@tabler/icons/filled/square-rounded-plus.svg';
import HomeIcon from '@tabler/icons/filled/home.svg';
import PurchasesIcon from '@tabler/icons/filled/receipt.svg';
import InvestmentsIcon from '@tabler/icons/filled/graph.svg';
import AccountIcon from '@tabler/icons/filled/user.svg';
---

<footer class="fixed bottom-4 left-1/2 transform -translate-x-1/2 w-[95%] z-50">
  <nav class="bg-gray-200/20 backdrop-blur shadow-md rounded-xl px-3 py-2">
    <div class="flex justify-around items-center text-gray-700">
      
      <a href="/dashboard/new" class="group flex flex-col items-center hover:text-blue-500">
        <div class="p-1 rounded-full transition-all duration-200">
          <PlusIcon class="w-6.5 h-6.5">
        </div>
        <span class="text-xs mt-0.5 hidden sm:block">New</span>
      </a>
      
      <a href="/dashboard" class="group flex flex-col items-center hover:text-blue-500">
        <div class="p-1 rounded-full transition-all duration-200">
          <HomeIcon class="w-6.5 h-6.5">
        </div>
        <span class="text-xs mt-0.5 hidden sm:block">Home</span>
      </a>
      
      <a href="/dashboard/transactions" class="group flex flex-col items-center hover:text-blue-500">
        <div class="p-1 rounded-full transition-all duration-200">
          <PurchasesIcon class="w-6.5 h-6.5">
        </div>
        <span class="text-xs mt-0.5 hidden sm:block">Transactions</span>
      </a>
      
      <a href="/dashboard/goals" class="group flex flex-col items-center hover:text-blue-500">
        <div class="p-1 rounded-full transition-all duration-200">
          <InvestmentsIcon class="w-6.5 h-6.5">
        </div>
        <span class="text-xs mt-0.5 hidden sm:block">Goals</span>
      </a>
      
      <a href="/dashboard/account" class="group flex flex-col items-center hover:text-blue-500">
        <div class="p-1 rounded-full transition-all duration-200">
          <AccountIcon class="w-6.5 h-6.5">
        </div>
        <span class="text-xs mt-0.5 hidden sm:block">Account</span>
      </a>
      
    </div>
  </nav>
</footer>

<script>
  const links = document.querySelectorAll('footer a');
  const currentPath = window.location.pathname;
  
  links.forEach(link => {
    if (link.getAttribute('href') === currentPath) {
      const iconWrapper = link.querySelector('div');
      iconWrapper.classList.add(
        'bg-blue-300/20',
        'backdrop-blur-sm',
        'shadow-md',
        'ring-0'
      );
    }
  });
</script>
